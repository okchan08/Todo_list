<% provide(:title, "My page") %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Todo List</h2>
      <p></p>
      <%= link_to "新規作成", new_task_path, class: "btn btn-info" %>
      <p></p>
      <% if @user.tasks.any? %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">やること</th>
              <th scope="col">期限</th>
              <th scope="col">ステータス</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <%= render @tasks %>
          </tbody>
        </table>
        <%= will_paginate @tasks %>
      <% else %>
        Nothing to do!
      <% end %>
    </div>
  </div>
</div>