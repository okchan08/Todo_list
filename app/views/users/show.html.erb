<% provide(:title, "My page") %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Todo List</h2>
      <% if @user.tasks.any? %>
        <ol>
          <%= render @tasks %>
        </ol>
        <%= will_paginate @tasks %>
      <% else %>
        Nothing to do!
      <% end %>
    </div>
  </div>
</div>